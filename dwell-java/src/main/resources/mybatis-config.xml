<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <settings>  <!-- 配置全局属性 -->
        <setting name="useGeneratedKeys" value="true"/>            <!-- JDBC的getGeneratedKeys获取数据库自增主键值 -->
        <setting name="useColumnLabel" value="true"/>              <!-- 使用列标签替换列别名 默认:true -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>    <!-- 驼峰命名 Table{book_name} -> Entity{bookName} -->
    </settings>

</configuration>